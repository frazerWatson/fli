<!DOCTYPE html>
<html>
<head>
  <title>FliBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', '//fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag "logo.svg" %>
      <% end %>
    </div>

    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Contact", contact_path %></li>
    </ul>

    <ul>
      <li class="category">Social</li>
      <li id="twitter">twitter</li>
      <li id="instagram">instagram</li>
      <li id="youtube">youtube</li>
      <li id="facebook">facebook</li>
    </ul>

    <p class="sign_in">Admin Login</p>
    <br>
    <p class="copyright">&copyright;2016 Fucking Little Idiots</p>
    
  </div>
  <div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>
        <p>All Posts</p>
      <% elsif current_page?(about_path) %>
        <p>About</p>
      <% elsif current_page?(contact_path) %>
        <p>Contact</p>
      <% else %>
        <%= link_to "Back to all posts", root_path %>
      <% end %>
      
      <div class="buttons">
         <button class ="button"><%= link_to "New Post", new_post_path %></button>
         <button class="button">Log Out</button>
       </div>
    </div>

     <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
     <% end %>

  <%= yield %>

  
</body>
</html>
